<Window x:Class="Rado.SUA.Windows.PopUp.LoadingBarPopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rado.SUA.Windows.PopUp"
        xmlns:vm="clr-namespace:Rado.SUA.Logic;assembly=Rado.SUA.Logic"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Title="CopyTaskWindow" Height="150" Width="350" Background="#3F3F3F">

    <Grid>
        <Border BorderBrush="#FF161616" BorderThickness="2">
            
       
        <StackPanel>
            <TextBlock Text="Loading..." FontSize="20" Margin="10" HorizontalAlignment="Center" Foreground="White"/>
            <ProgressBar Name="progressBar" Height="15" Width="250" Margin="50,0,50,0" IsIndeterminate="True" />
            <TextBlock Name="taskName" FontSize="15"  Margin="50,0,50,0" Foreground="White"/>
        </StackPanel>
        </Border>
    </Grid>
</Window>
