<Window x:Class="Rado.SUA.Windows.PopUp.ConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rado.SUA.Windows.PopUp"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="" Height="100" Width="320" Background="#3F3F3F">
    <Grid>
        <TextBlock Text="Are you sure you want to delete selected task?" FontSize="14" FontStyle="Normal" Foreground="White" Margin="0" HorizontalAlignment="Center"/>
        <StackPanel Orientation="Horizontal" Height="85" VerticalAlignment="Center">
            <Button Name="btn_yes" Content="Yes" Height="25" Width="60" Margin="50,35,25,25" Click="btn_yes_Click"/>
            <Button Name="btn_no" Content="No" Height="25" Width="60" Margin="70,35,25,25" Click="btn_no_Click"/>
        </StackPanel>
    </Grid>
</Window>
